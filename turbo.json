{
  "$schema": "https://turborepo.com/schema.json",
  "remoteCache": {
    "apiUrl": "https://cache-turbo.headpat.space",
    "teamSlug": "qr-generator"
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
